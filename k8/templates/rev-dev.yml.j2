kind: Service
apiVersion: v1
metadata:
    name: rev-frontend
spec:
    type: ExternalName
    externalName: host.docker.internal

---

apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: rev-ingress
  annotations:
    kubernetes.io/ingress.class: "nginx"
spec:
  rules:
  - host: host.docker.internal
    http:
      paths:
      - path: /revstorage/
        backend:
          serviceName: minio
          servicePort: 9000
      - path: /
        backend:
          serviceName: rev-frontend
          servicePort: 56395
