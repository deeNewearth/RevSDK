apiVersion: v1
kind: Service
metadata:
    name: {{MONGOSERVER}}
    labels:
        app: {{MONGOSERVER}}
spec:
    clusterIP: None
    ports:
    -   port: 27017
    selector:
        app: {{MONGOSERVER}}

---

apiVersion: apps/v1
kind: StatefulSet
metadata:
    name: {{MONGOSERVER}}-node
spec:
  serviceName: {{MONGOSERVER}}
  selector:
    matchLabels:
        app: {{MONGOSERVER}}
  replicas: 1
  template:
    metadata:
        labels:
            app: {{MONGOSERVER}}
    spec:
        containers:
        -   name: {{MONGOSERVER}}-node
            image: mongo:3.6
            command: [ "/usr/bin/mongod", "--smallfiles", "--bind_ip_all" ]
            volumeMounts:
            -   mountPath: "/data/db"
                name: mongo-data
            ports:
            -   containerPort: 27017
        {% if not NORESOUCERESERVATION  %}
            resources:
                requests:
                    cpu: "500m"
                    memory: "500Mi"
        {% endif %}
  volumeClaimTemplates:
  - metadata:
        name: mongo-data
    spec:
      accessModes: [ "ReadWriteOnce" ]
      resources:
        requests:
          storage: 5Gi

        
