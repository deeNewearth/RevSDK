apiVersion: v1
kind: Service
metadata:
    name: {{MINIOSERVER}}
spec:
    ports:
    -   port: 9000
        name: http
    selector:
        app: {{MINIOSERVER}}

---

apiVersion: apps/v1
kind: StatefulSet
metadata:
    name: {{MINIOSERVER}}
spec:
  serviceName: {{MINIOSERVER}}
  selector:
    matchLabels:
        app: {{MINIOSERVER}}
  replicas: 1
  updateStrategy:
    type: RollingUpdate
  template:
    metadata:
        labels:
            app: {{MINIOSERVER}}
    spec:
        containers:
        -   name: {{MINIOSERVER}}
            image: minio/minio:RELEASE.2019-08-29T00-25-01Z
            args: [ "server", "/data" ]
            env:
            -   name: MINIO_REGION
                value: "us-east-1"
            -   name: MINIO_ACCESS_KEY
                valueFrom:
                    secretKeyRef:
                        name: rev-secrets
                        key: minio_accesskey
            -   name: MINIO_SECRET_KEY
                valueFrom:
                    secretKeyRef:
                        name: rev-secrets
                        key: minio_pass

            volumeMounts:
            -   name: minio-data
                mountPath: /data

            ports:
            -   containerPort: 9000
                name: http
        {% if not NORESOUCERESERVATION  %}
            resources:
                requests:
                    cpu: "500m"
                    memory: "500Mi"
        {% endif %}
  volumeClaimTemplates:
  - metadata:
        name: minio-data
    spec:
      accessModes: [ "ReadWriteOnce" ]
      resources:
        requests:
          storage: 25Gi
        

